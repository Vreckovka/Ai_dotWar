<Window
  x:Class="MoonLanding_NeuralNetwork.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:MoonLanding_NeuralNetwork"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="1200"
  Height="1200"
  mc:Ignorable="d">
  <Grid Background="#151515">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition />
    </Grid.RowDefinitions>
    <TextBlock Text="{Binding GenerationCount}" Foreground="White"/>

    <Border Width="1000" Height="1000" BorderThickness="1"  Grid.Row="1">
      <Canvas x:Name="canvas" />
    </Border>

  </Grid>
</Window>
